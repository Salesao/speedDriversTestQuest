// prettier-ignore
{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "esnext",
		"noImplicitAny": true,
    /* Completeness */
    "skipLibCheck": true,
    "typeRoots": ["./src/types"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@redux/*": ["./src/redux/*"],
      "@UI/*": ["./src/UI/*"],
      "@utils/*": ["./src/utils/*"],
    }
  },
  "exclude": [
    "node_modules",
    "src/utils/babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx", "**/*.jsx",  "**/*.js",
  ]
}
